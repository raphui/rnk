menu "Architecture configuration"

config CPU_ARM
    bool
    default y

config CPU_ARMV7
    bool
    select CPU_ARM

config CPU_ARM_THUMB
    bool

config CPU_ARMV7M
    bool
    select CPU_ARMV7
    select CPU_ARM_THUMB

choice
   prompt "Architecture"

config CPU_ARM_CORTEX_M3
    bool "Cortex-M3"
    select CPU_ARMV7M

config CPU_ARM_CORTEX_M4
    bool "Cortex-M4"
    select CPU_ARMV7M

config CPU_ARM_CORTEX_M7
    bool "Cortex-M7"
    select CPU_ARMV7M

endchoice

choice
    prompt "Endianess"
    default LITTLE_ENDIAN

config BIG_ENDIAN
    bool "Big Endian"

config LITTLE_ENDIAN
    bool "Little Endian"

endchoice

config STACK_SIZE
	hex "Size of stack"

source arch/arm/lib/Kconfig

endmenu
